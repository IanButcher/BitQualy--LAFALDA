<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" type="image/png" href="https://ugc.production.linktr.ee/mj5IciCyRk2puUukygYa_kmwAn8AE84X4N3S5?io=true&size=avatar-v3_0">
    
    
</head>
<body>
    <div class="container">
        <!-- Panel izquierdo para la imagen -->
        <div class="left-panel">
            <div class="logo-section">
                <img src="/img/Logo BitQualy Blanco.png" alt="BitQualy Logo" class="logo">
                <!--<h1 class="brand-name">BitQualy</h1>-->
            </div>
        </div>
        <!-- Panel derecho para el formulario de login -->
        <div class="right-panel">
            <% if (error_msg) { %>
                <div class="alert alert-danger">
                    <%= error_msg %>
                </div>
            <% } %>
            
            <form class="login-form" method="POST" action="/login">
                <img class="login-titulo" src="/img/Login Letra.png" alt="" >
                <div class="input-group">
                    <label for="legajo">Legajo</label>
                    <input type="text" id="legajo" name="legajo" placeholder="Ingresa tu legajo" required>
                </div>
            
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required>
                    <span class="toggle-password-eye" onclick="togglePassword()">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            
                <button type="submit" class="login-button">Iniciar Sesión</button>
            </form>
            
        </div>
    </div>

    <script>
        function togglePassword() {
        const passwordField = document.getElementById('password');
        const passwordIcon = document.querySelector('.toggle-password-eye i');
        
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            passwordIcon.classList.remove('fa-eye');
            passwordIcon.classList.add('fa-eye-slash'); // Cambia el icono a "ocultar"
        } else {
            passwordField.type = 'password';
            passwordIcon.classList.remove('fa-eye-slash');
            passwordIcon.classList.add('fa-eye'); // Cambia el icono a "mostrar"
        }
    }
    </script>
</body>
</html>
